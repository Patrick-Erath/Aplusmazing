<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%=blog.title%>" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" value="<%= blog.image %>" name="blog[image]" placeholder="image">
        </div>
         <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"> <%= blog.body %> </textarea>
        </div>
        <button class="ui big primary button">
        Save
        </button>
    </form>
</div>

<% include ./partials/footer %>